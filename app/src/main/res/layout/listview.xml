<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="32dp"
        android:layout_marginBottom="7dp">

        <Button
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:layout_marginRight="23dp"
            android:background="@android:drawable/ic_delete" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="28dp">

            <TextView
                android:id="@+id/list_books_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_books_name"
                android:layout_marginTop="4dp"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/list_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_author_name"
                android:layout_marginTop="4dp"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/list_date_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_stock_name"
                android:layout_marginTop="4dp"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/list_date_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/list_return"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_baseline_arrow_upward_24" />

                <Button
                    android:id="@+id/issue"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_baseline_arrow_downward_24" />

                <Button
                    android:id="@+id/edit2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:background="@android:drawable/ic_menu_edit" />

            </TableRow>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>